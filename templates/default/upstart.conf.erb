#!upstart
description "Node.js Application Server"

start on (local-filesystems and net-device-up IFACE!=lo)
stop on [!12345]

console log

<% @environment.each do |key, value| -%>
	env <%= key %>="<%= value %>"
<% end -%>
<% unless @user.nil? -%>
	setuid <%= @user %>
<% end -%>
<% unless @group.nil? -%>
	setgid <%= @group %>
<% end -%>
chdir /srv/building/current
exec node <%= @entry %>

respawn
respawn limit 10 90
